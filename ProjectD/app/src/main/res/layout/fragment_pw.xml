<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/name1"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="66dp"
            android:text="이름"
            android:textSize="18sp" />

        <AutoCompleteTextView
            android:id="@+id/textName"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/name1"
            android:layout_toRightOf="@+id/name1"
            android:hint="이름을 입력해주세요"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/email1"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="43dp"
            android:text="E-Mail"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/textEmail"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_toEndOf="@+id/email1"
            android:layout_toRightOf="@+id/email1"
            android:ems="10"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="39dp"
            android:text="휴대폰 번호"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phonenum"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_toEndOf="@+id/phone"
            android:layout_toRightOf="@+id/phone"
            android:ems="10"
            android:hint="휴대폰 번호를 입력해주세요"
            android:inputType="number"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_pw"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonenum"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="비밀번호찾기" />


    </RelativeLayout>

</FrameLayout>