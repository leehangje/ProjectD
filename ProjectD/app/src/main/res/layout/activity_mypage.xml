<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/member_addr"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="99dp"
        android:text="동네 표시"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mypage_profile_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="287dp"
        android:layout_marginTop="55dp"
        android:background="#FFFFFF"
        android:text="프로필 수정"
        android:textColor="#434242"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="162dp" />

    <Button
        android:id="@+id/mypage_logout"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="500dp"
        android:background="#FFFFFF"
        android:text="로그아웃"
        android:textColor="#434242"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mypage_qna"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="427dp"
        android:background="#FFFFFF"
        android:text="자주 묻는 질문"
        android:textColor="#434242"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mypage_notice"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="354dp"
        android:background="#FFFFFF"
        android:text="공지사항"
        android:textColor="#434242"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/mypage_favorit"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="249dp"
        android:scaleType="fitXY"
        android:src="@drawable/heart" />

    <ImageButton
        android:id="@+id/mypage_lentlist"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="251dp"
        android:scaleType="fitXY"
        android:src="@drawable/md_rent_list" />

    <ImageButton
        android:id="@+id/my_goods"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/my_md_list" />

    <TextView
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="172dp"
        android:text="(평균)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="63dp"
        android:text="닉네임"
        android:textSize="20sp" />

</RelativeLayout>