<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:text="닉네임"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mypage_profile_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="70dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="프로필 수정"/>

    <TextView
        android:id="@+id/level"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="160dp"
        android:text="등급 표시"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/levelBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="190dp" />

    <Button
        android:id="@+id/my_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="250dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="내 상품" />

    <Button
        android:id="@+id/mypage_lentlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="251dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="대여목록" />

    <Button
        android:id="@+id/mypage_favorit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="281dp"
        android:layout_marginTop="249dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="찜 목록" />

    <Button
        android:id="@+id/mypage_location"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="333dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="내 동네 설정" />

    <Button
        android:id="@+id/mypage_notice"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="388dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="공지사항" />

    <Button
        android:id="@+id/mypage_qna"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="444dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="자주 묻는 질문" />

    <Button
        android:id="@+id/mypage_logout"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="500dp"
        android:background="#A69C9C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="로그아웃" />

</RelativeLayout>